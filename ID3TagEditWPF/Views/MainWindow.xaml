<Window x:Class="ID3TagEditWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ID3TagEditWPF.Views"
        xmlns:vm="clr-namespace:ID3TagEditWPF.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Items}" AutoGenerateColumns="True" 
                  CanUserReorderColumns="False" CanUserDeleteRows="True"
                  CanUserAddRows="False" CanUserResizeRows="False"
                  CanUserResizeColumns="True" BeginningEdit="DataGrid_BeginningEdit" AutoGeneratingColumn="DataGrid_AutoGeneratingColumn" />
        <Button Grid.Row="1" Content="Add" HorizontalAlignment="Left" Command="{Binding AddCommand}" Margin="5" Padding="5"/>
    </Grid>
</Window>
